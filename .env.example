# Server Configuration
PORT=3001
NODE_ENV=development

# AWS S3 Configuration (if using S3 for storage)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=phone-skin-designs

# Shopify Configuration (optional - for future Shopify app integration)
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
SHOPIFY_STORE_URL=

# Storage Configuration
STORAGE_TYPE=local
# Options: 'local', 's3', 'shopify'
LOCAL_STORAGE_PATH=./uploads

# CDN Base URL (for serving template SVGs)
CDN_BASE_URL=http://localhost:3001

# Max upload size in bytes (10MB)
MAX_UPLOAD_SIZE=10485760

# Print DPI for validation
MIN_IMAGE_DPI=150
RECOMMENDED_IMAGE_DPI=300
